{
    "version": 2,
    "builds": [
        {
            "src": "src/app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "includeFiles": [
                    "src/**",
                    "requirements.txt",
                    ".env"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/src/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/src/app.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "FLASK_APP": "src/app.py",
        "FLASK_ENV": "production",
        "PYTHON_VERSION": "3.9"
    }
} 